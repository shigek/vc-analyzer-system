    "jsonwebtoken": "^9.0.2",
    "jsrsasign": "^11.1.0",
    "kubo-rpc-client": "^3.0.4",
    "node-gzip": "^1.1.2",
    "npm": "^11.3.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "uint8arrays": "^5.1.0",
    "uuid": "^11.1.0"
